<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.tcc3.views.fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_entrarFragment"
            app:destination="@id/entrarFragment" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/entrarFragment"
        android:name="com.example.tcc3.views.fragments.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_entrarFragment_to_registrarFragment"
            app:destination="@id/registrarFragment" />
        <action
            android:id="@+id/action_entrarFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrarFragment"
        android:name="com.example.tcc3.views.fragments.SignUpFragment"
        android:label="fragment_registrar"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_registrarFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_registrarFragment_to_entrarFragment"
            app:destination="@id/entrarFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.tcc3.views.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_gerenciarFragment"
            app:destination="@id/gerenciarFragment" />
        <action
            android:id="@+id/action_homeFragment_to_atribuirFragment"
            app:destination="@id/atribuirFragment" />
        <action
            android:id="@+id/action_homeFragment_to_setoresFragment"
            app:destination="@id/setoresFragment" />
        <action
            android:id="@+id/action_homeFragment_to_logsFragment"
            app:destination="@id/logsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_statusFragment"
            app:destination="@id/statusFragment" />
        <action
            android:id="@+id/action_homeFragment_to_entrarFragment"
            app:destination="@id/entrarFragment" />
    </fragment>
    <fragment
        android:id="@+id/setoresFragment"
        android:name="com.example.tcc3.views.fragments.SectionsFragment"
        android:label="fragment_setores"
        tools:layout="@layout/fragment_sections" >
        <action
            android:id="@+id/action_setoresFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_setoresFragment_to_statusFragment"
            app:destination="@id/statusFragment" />
        <action
            android:id="@+id/action_setoresFragment_to_logsFragment"
            app:destination="@id/logsFragment" />
    </fragment>
    <fragment
        android:id="@+id/gerenciarFragment"
        android:name="com.example.tcc3.views.fragments.WaitersManageFragment"
        android:label="fragment_gerenciar"
        tools:layout="@layout/fragment_waiters_manage" >
        <action
            android:id="@+id/action_gerenciarFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_gerenciarFragment_to_logsFragment"
            app:destination="@id/logsFragment" />
        <action
            android:id="@+id/action_gerenciarFragment_to_statusFragment"
            app:destination="@id/statusFragment" />
    </fragment>
    <fragment
        android:id="@+id/atribuirFragment"
        android:name="com.example.tcc3.views.fragments.AssignFragment"
        android:label="fragment_atribuir"
        tools:layout="@layout/fragment_assign" >
        <action
            android:id="@+id/action_atribuirFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_atribuirFragment_to_logsFragment"
            app:destination="@id/logsFragment" />
        <action
            android:id="@+id/action_atribuirFragment_to_statusFragment"
            app:destination="@id/statusFragment" />
    </fragment>
    <fragment
        android:id="@+id/statusFragment"
        android:name="com.example.tcc3.views.fragments.StatusFragment"
        android:label="fragment_status"
        tools:layout="@layout/fragment_status" >
        <action
            android:id="@+id/action_statusFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_statusFragment_to_logsFragment"
            app:destination="@id/logsFragment" />
    </fragment>
    <fragment
        android:id="@+id/logsFragment"
        android:name="com.example.tcc3.views.fragments.LogsFragment"
        android:label="fragment_logs"
        tools:layout="@layout/fragment_logs" >
        <action
            android:id="@+id/action_logsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_logsFragment_to_statusFragment"
            app:destination="@id/statusFragment" />
    </fragment>
</navigation>